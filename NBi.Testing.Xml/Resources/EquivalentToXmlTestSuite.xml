<?xml version="1.0" encoding="utf-8" ?>
<testSuite name="The Query TestSuite" xmlns="http://NBi/TestSuite">
	<settings>
		<default apply-to="system-under-test">
			<connectionString>Data Source=.\SQL2017;Initial Catalog=AdventureWorks2017;User Id=sa;password=Password12!</connectionString>
		</default>
	</settings>
	<test name="Manage Items" uid="0001">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalent-to>
				<item>Hello</item>
				<item>World</item>
			</equivalent-to>
		</assert>
	</test>
	<test name="Manage one-column-query" uid="0002">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<one-column-query>
					select 'Hello' union select 'World'
				</one-column-query>
			</equivalentTo>
		</assert>
	</test>
	<test name="Manage predefined items" uid="0003">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<predefined type="days-of-week" language="en"/>
			</equivalentTo>
		</assert>
	</test>
	<test name="Manage integer range" uid="0004">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<range-integer start="1" end="10" step="2"/>
			</equivalentTo>
		</assert>
	</test>
	<test name="Manage date range" uid="0004">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<range-date start="2013-01-01" end="2013-12-31" culture="en" format="dd/MM/yyyy"/>
			</equivalentTo>
		</assert>
	</test>
	<test name="Manage integer and pattern range" uid="0005">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<range-integer-pattern start="1" end="52" pattern="Week " position="suffix"/>
			</equivalentTo>
		</assert>
	</test>
</testSuite>
