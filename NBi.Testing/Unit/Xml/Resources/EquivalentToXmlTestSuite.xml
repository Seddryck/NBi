	<test name="Hello World" uid="0001">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<item>Hello</item>
				<item>World</item>
			</equivalentTo>
		</assert>
	</test>
	<test name="Hello World from Query" uid="0002">
		<system-under-test>
			<members>
				<hierarchy dimension="my-dimension" perspective="my-perspective" caption="my-hierarchy"/>
			</members>
		</system-under-test>
		<assert>
			<equivalentTo>
				<one-column-query>
					select 'Hello' union select 'World'
				</one-column-query>
			</equivalentTo>
		</assert>
	</test>
</testSuite>
