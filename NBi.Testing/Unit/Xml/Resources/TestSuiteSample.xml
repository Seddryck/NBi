<?xml version="1.0" encoding="utf-8"?>
<testSuite name="The TestSuite" xmlns="http://NBi/TestSuite">
	<test name="My first test case" uid="0001">
		<system-under-test>
			<query name="Select first product" connectionString="Data Source=.;Initial Catalog=NBi.Testing;Integrated Security=True">
				SELECT TOP 1 * FROM Product;
			</query>
		</system-under-test>
		<assert>
			<syntacticallyCorrect />
		</assert>
	</test>
	<test name="My second test case">
		<category>Category 1</category>
		<category>Category 2</category>
		<system-under-test>
			<query name="Select all products" connectionString="Data Source=.;Initial Catalog=NBi.Testing;Integrated Security=True">
				SELECT * FROM Product;
			</query>
			<query query-file="Select all products.sql" connectionString="Data Source=.;Initial Catalog=NBi.Testing;Integrated Security=True" />
		</system-under-test>
		<assert>
			<syntacticallyCorrect />
			<fasterThan max-time-milliSeconds="5000" />
		</assert>
	</test>
	<test name="My Mdx test case">
		<system-under-test>
			<query query-file="SimpleMdx.Mdx" connectionString="Provider=MSOLAP.4;Data Source=localhost;Catalog=&quot;Finances Analysis&quot;;"/>
		</system-under-test>
		<assert>
			<equalTo
				resultSet-file="SimpleMdx.csv"
			/>
		</assert>
	</test>
	<test name="My Mdx against another Mdx">
		<system-under-test>
			<query query-file="SimpleMdx.Mdx" connectionString="Provider=MSOLAP.4;Data Source=localhost;Catalog=&quot;Finances Analysis&quot;;"/>
		</system-under-test>
		<assert>
			<equalTo
			query-file="SimpleMdxTwo.mdx"
			connectionString="Provider=MSOLAP.4;Data Source=RemoteServer;Catalog=Finances;"
		/>
		</assert>
	</test>
	<test name="level counts exactly 10 members">
		<system-under-test>
			<members path="[dimension].[hierarchy].[level]" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<count
				exactly="10"
		/>
		</assert>
	</test>
	<test name="hierarchy counts between 10 and 15 members">
		<system-under-test>
			<members path="[dimension].[hierarchy]" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<count
				more-than="10"
				less-than="15"
			/>
		</assert>
	</test>
	<test name="hierarchy contains member with caption xyz (implicitely ignoring case)">
		<system-under-test>
			<members path="[dimension].[hierarchy]" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xyz"
			/>
		</assert>
	</test>
	<test name="hierarchy contains member with caption xyz (explicitely not ignoring case)">
		<system-under-test>
			<members path="[dimension].[hierarchy]" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				ignore-case="true"
			/>
		</assert>
	</test>
	<test name="hierarchy contains level with caption xyz (explicitely not ignoring case)">
		<system-under-test>
			<structure path="[dimension].[hierarchy]" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				ignore-case="true"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz without display folder">
		<system-under-test>
			<structure measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz in displayFolder aBc">
		<system-under-test>
			<structure measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				display-folder="aBc"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz in displayFolder root">
		<system-under-test>
			<structure measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				display-folder=""
			/>
		</assert>
	</test>
	<test name="hierarchy contains member with caption xyz under the element abc at level Level">
		<system-under-test>
			<members path="[dimension].[hierarchy].[level]" children-of="aBc" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				ignore-case="true"
			/>
		</assert>
	</test>
</testSuite>