<?xml version="1.0" encoding="utf-8"?>
<testSuite name="The TestSuite" xmlns="http://NBi/TestSuite">
	<test name="hierarchy contains level with caption xyz (explicitely not ignoring case)">
		<system-under-test>
			<hierarchy caption="hierarchy" dimension="dimension" perspective="Perspective" connectionString="ConnectionString">
				<structure/>
			</hierarchy>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				ignore-case="true"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz without display folder">
		<system-under-test>
			<measure-group caption="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz in displayFolder aBc">
		<system-under-test>
			<measure-group caption="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				display-folder="aBc"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz in displayFolder root">
		<system-under-test>
			<measure-group caption="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				display-folder=""
			/>
		</assert>
	</test>
	<test name="level with caption xyz (explicitely not ignoring case) exists under dimension.hierarchy">
		<system-under-test>
			<level caption="xYz" hierarchy="hierarchy" dimension="dimension" perspective="Perspective" connectionString="ConnectionString">
				<structure/>
			</level>
		</system-under-test>
		<assert>
			<exists
				ignore-case="true"
			/>
		</assert>
	</test>
	<test name="Measure xYz exists in displayFolder root">
		<system-under-test>
			<measure caption="xYz" measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<exists
				display-folder=""
			/>
		</assert>
	</test>
</testSuite>