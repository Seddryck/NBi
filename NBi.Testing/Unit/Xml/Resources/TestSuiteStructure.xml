<?xml version="1.0" encoding="utf-8"?>
<testSuite name="The TestSuite" xmlns="http://NBi/TestSuite">
	<test name="hierarchy contains level with caption xyz (explicitely not ignoring case)">
		<system-under-test>
			<structure target="levels" path="[dimension].[hierarchy]" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				ignore-case="true"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz without display folder">
		<system-under-test>
			<structure target="measures" measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz in displayFolder aBc">
		<system-under-test>
			<structure target="measures" measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				display-folder="aBc"
			/>
		</assert>
	</test>
	<test name="MeasureGroup contains a measure named xYz in displayFolder root">
		<system-under-test>
			<structure target="measures" measure-group="MeasureGroupName" perspective="Perspective" connectionString="ConnectionString"/>
		</system-under-test>
		<assert>
			<contains
				caption="xYz"
				display-folder=""
			/>
		</assert>
	</test>
</testSuite>